<!-- res/drawable/rounded_button.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="#8C4AD8" /> <!-- Background color of the button -->
    <corners android:radius="12dp" /> <!-- Corner radius for rounded edges -->
    <gradient
        android:angle="90"
        android:startColor="#A384E7"
        android:endColor="#8C4AD8" /> <!-- Gradient color effect -->
    <padding
        android:left="16dp"
        android:right="16dp"
        android:top="12dp"
        android:bottom="12dp" /> <!-- Padding inside the button -->
</shape>
